<%= form_for(@project) do |f| %>

  <% if @project.errors.any? %>
    <h3> Errors: </h3>
    <ul>
      <% @project.errors.full_messages.each do |message|  %>
        <li> <%= message %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>

  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  
  <%= f.submit %>
<% end %>